<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <TableLayout
        android:id="@+id/calendar_table_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="1"/>
            <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="2"/>
             <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="3"/>
            <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="4"/>
           <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="5"/>
          <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="6"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="1"/>
            <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="2"/>
             <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="3"/>
            <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="4"/>
           <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="5"/>
          <TextView
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:text="6"/>
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="DayFont">
        <item name="android:clickable">true</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDy">1</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DayFont.Regular">
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:background">@drawable/cell</item>
    </style>

    <style name="DayFont.Faded">
        <item name="android:textColor">#d7d7d7</item>
        <item name="android:background">@drawable/cell</item>
    </style>

    <style name="Calendar">
        <item name="blockFutureDays">true</item>
        <item name="weekStartDay">monday</item>

        <item name="blockedStateDrawable">@drawable/cell</item>
        <item name="blockedStateTextAppearance">@style/CellFont.Inactive</item>
        <item name="blockedStateTypeface">fonts/helvetica_neue_bold.ttf</item>

        <item name="regularStateDrawable">@drawable/cell</item>
        <item name="regularStateTextAppearance">@style/CellFont.Regular</item>
        <item name="regularStateTypeface">fonts/helvetica_neue_bold.ttf</item>

        <item name="inactiveStateDrawable">@drawable/cell</item>
        <item name="inactiveStateTextAppearance">@style/CellFont.Inactive</item>
        <item name="inactiveStateTypeface">fonts/helvetica_neue_bold.ttf</item>

        <item name="activeStateDrawable">@drawable/cell_active</item>
        <item name="activeStateTextAppearance">@style/CellFont.Regular</item>
        <item name="activeStateTypeface">fonts/helvetica_neue_bold.ttf</item>

        <item name="currentStateDrawable">@drawable/cell_current</item>
        <item name="currentStateTextAppearance">@style/CellFont.Current</item>
        <item name="currentStateTypeface">fonts/helvetica_neue_bold.ttf</item>

        <item name="headerStateTextAppearance">@android:style/TextAppearance.Medium</item>
        <item name="headerStateTypeface">fonts/helvetica_neue.ttf</item>
    </style>

    <style name="CellFont">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CellFont.Regular">
        <item name="android:textColor">@color/default_cell_text_regular</item>
    </style>

    <style name="CellFont.Inactive">
        <item name="android:textColor">@color/default_cell_text_inactive</item>
    </style>

    <style name="CellFont.Current">
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
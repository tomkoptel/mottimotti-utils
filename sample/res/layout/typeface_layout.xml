<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mottimotti.android.widget.TypeFaceTextView
        app:typeFace="fonts/fs_dillon_bold_italic.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample text in TypeFaceTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample text in TextView"/>

    <com.mottimotti.android.widget.TypeFaceButton
        app:typeFace="fonts/fs_dillon_bold_italic.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample text in TypeFaceButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample text in Button"/>

    <com.mottimotti.android.widget.TypeFaceEditText
        app:typeFace="fonts/fs_dillon_bold_italic.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample text in TypeFaceEditText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample text in EditText"/>


</LinearLayout>
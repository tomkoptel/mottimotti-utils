                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.mottimotti.android.sample.EXAMPLE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".sample.SwipeDismissListActivity"
            android:label="Expanded list with swipe dismiss effect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.mottimotti.android.sample.EXAMPLE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".sample.AnimationListActivity"
            android:label="Demo for animation activity transitions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.mottimotti.android.sample.EXAMPLE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".sample.SampleActivity"
            android:label="Sample page"/>
    </application>
</manifest>
